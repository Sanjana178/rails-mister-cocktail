<h1><%= @cocktail.name %></h1>

<h3>Recipe</h3>
 <table class="table table-bordered">
   <body>
       <th>Ingredient</th>
       <th>Description</th>
       <th>Action</th>
     <% @cocktail.doses.each do |dose| %>
       <tr>
         <td><%= dose.ingredient.name %></td>
         <td><%= dose.description %></td>
         <td>
           <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
         </td>
       </tr>
     <% end %>
 </table>

<p><%= link_to "Back to list", root_path %></p>
<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail)%></p>

